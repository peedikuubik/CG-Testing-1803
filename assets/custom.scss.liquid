/*============================================================================
  Custom product grid
==============================================================================*/

.product-grid {
  // display: -ms-grid;
  display: grid;
  // -ms-grid-columns: (1fr)[3];
  grid-template-columns: repeat( auto-fill, minmax(280px, 1fr) );
  // -ms-grid-rows: 1fr;
  grid-auto-rows: 1fr;
  grid-gap: 30px;
}

  .product-grid__card {
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .product-grid__card-body {
    border: 1px solid #e8e9eb;
    border-top: none;
    padding: 20px;
    flex: 1;
  }

  .product-grid__image-wrapper {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 100%;
  }

  .product-grid__image {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }