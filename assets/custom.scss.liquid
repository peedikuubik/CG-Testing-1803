/*============================================================================
  Custom product grid
==============================================================================*/

.product-grid {
  display: -ms-grid;
  display: grid;
  grid-template-columns: repeat( auto-fill, minmax(280px, 1fr) );
  grid-auto-rows: 1fr;
  grid-gap: 30px;
}

  .product-grid__card {
    position: relative;
    height: 100%;
    -webkit-transition: .6s;
    transition: .6s;
    -webkit-transform-style: preserve-3d;
    transform-style: preserve-3d;
  }

  .product-grid__card-flip {
    position: relative;
    height: 100%;
    -webkit-transition: .6s;
    transition: .6s;
    -webkit-transform-style: preserve-3d;
    transform-style: preserve-3d;
  }

  .product-grid__card:hover .product-grid__card-flip {
    -webkit-transform: rotateY(180deg);
    transform: rotateY(180deg);
  }

  .product-grid__card-side {
    width: 100%;
    height: 100%;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -ms-flex-direction: column;
    flex-direction: column;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
  }

  .product-grid__card-side--front {
    position: relative;
    z-index: 2;
    -webkit-transform: rotateY(0deg);
    transform: rotateY(0deg);
  }

  .product-grid__card-side--back {
    position: absolute;
    top: 0;
    left: 0;
    -webkit-transform: rotateY(180deg);
    transform: rotateY(180deg);
  }

  .product-grid__image-wrapper {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 100%;
  }

  .product-grid__image {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-grid__card-body {
    border: 1px solid #e8e9eb;
    border-top: none;
    padding: 20px;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
  }